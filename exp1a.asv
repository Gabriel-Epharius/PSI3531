
N = 10000;

n = [0:N-1]; % vetor de amostras 
s = randn(1, N)*sqrt(.01); %ruído branco

fi = rand*2*pi;

x = sin((2*pi*n/10) + (pi/6) + fi);
u = 5*sin((2*pi*n/10) + fi);
d = s + x;

%%%%%%%%%%%%%%%%%

xcorr(u, 1, 'biased'); % verificação matriz R (em -1, 0 e em 1)
xcorr(d, u, 1, 'biased') % verificaão matriz p (-1, 0, 1)







